# AI Investment Advisory System Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys (recommended for full functionality)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# LangChain Configuration (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Application Settings
DEFAULT_MODEL=gpt-4o-mini-2024-07-18
MODEL_TEMPERATURE=0.1
DEFAULT_MARKET=미국장
DEFAULT_ANALYSIS_PERIOD=12

# Cache Settings
USE_CACHE=true
CACHE_DURATION_MINUTES=15
CACHE_DIRECTORY=.cache

# Request Settings
REQUEST_TIMEOUT=15
MAX_RETRIES=3
RETRY_DELAY=1.0

# Logging Settings
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log  # Uncomment to enable file logging

# Feature Flags
ENABLE_RECOMMENDATIONS=true
ENABLE_SECTOR_ANALYSIS=true
ENABLE_BACKTESTING=false

# Security Settings
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=60

# Development Settings
DEBUG_MODE=false
ENVIRONMENT=production
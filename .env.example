# AI Service Configuration
OPENAI_API_KEY="sk-your_openai_api_key_here"
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_api_key_here"

# LangChain Configuration (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Model Configuration
# Available models (2024 pricing per 1M tokens):
# - gpt-5-nano: $0.05 input/$0.40 output (RECOMMENDED - 84% cheaper!)
# - gpt-5-mini: $0.25 input/$2.00 output
# - gpt-4o-mini: $0.60 input/$2.40 output (previous default)
DEFAULT_MODEL=gpt-4o-mini  # Fixed model name
MODEL_TEMPERATURE=0.1
MAX_TOKENS=800  # Optimized for nano model

# Cache Configuration
USE_CACHE=true
CACHE_DURATION_MINUTES=15
CACHE_DIRECTORY=.cache

# Application Configuration
APP_TITLE=AI 투자 자문 서비스
PAGE_LAYOUT=wide
DEBUG_MODE=false

# Market Configuration
DEFAULT_MARKET=미국장
DEFAULT_ANALYSIS_PERIOD=12

# Data Fetching Configuration
REQUEST_TIMEOUT=15
MAX_RETRIES=3
RETRY_DELAY=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Security Configuration
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=60

# Feature Flags
ENABLE_RECOMMENDATIONS=true
ENABLE_SECTOR_ANALYSIS=true
ENABLE_BACKTESTING=false
USE_YAHOO_FINANCE=false  # Set to false on Streamlit Cloud to avoid 429 errors

# Database Configuration (Future)
DATABASE_URL=postgresql://stock_user:stock_password@localhost:5432/stock_db
REDIS_URL=redis://localhost:6379/0

# Development Configuration
ENVIRONMENT=development
EOF < /dev/null
